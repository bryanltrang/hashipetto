{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
    {
      "files": ["**/*.{js,mjs,cjs,ts,jsx,tsx}"],
      "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
      }
    }
  ],
  "globals": {
    "window": "readonly",
    "document": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"]
}